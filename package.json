{
  "name": "fhevm-react-template",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK for building privacy-preserving dApps",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@fhevm/sdk",
    "build": "npm run build --workspace=@fhevm/sdk",
    "build:sdk": "npm run build --workspace=@fhevm/sdk",
    "test": "npm run test --workspace=@fhevm/sdk",
    "type-check": "npm run type-check --workspace=@fhevm/sdk",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules",
    "demo:start": "echo 'Visit live demo at: https://private-rental-matching.vercel.app/'",
    "demo:clone": "git clone https://github.com/SchuylerPouros/private-rental-matching.git demo-app && cd demo-app && npm install",
    "compile": "cd ../private-rental-matching && npm run compile",
    "deploy": "cd ../private-rental-matching && npm run deploy"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SchuylerPouros/fhevm-react-template.git"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "privacy",
    "zama",
    "blockchain",
    "web3",
    "ethereum",
    "react",
    "sdk"
  ],
  "author": "FHEVM Community",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
